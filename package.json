{
  "name": "@chyzwar/common",
  "version": "1.0.0",
  "engines": {
    "node": "20.x",
    "yarn": "4.x"
  },
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/*/examples",
    "packages/*/examples/packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.js,.tsx",
    "lint:fix": "eslint . --ext .ts,.js,.tsx --fix",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "lerna": "lerna",
    "test": "vitest --run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "postinstall": "husky install",
    "prepare": "husky"
  },
  "dependencies": {
    "@chyzwar/eslint-config": "^0.2.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "18.6.0",
    "@lerna-lite/cli": "^3.3.0",
    "@lerna-lite/publish": "^3.3.0",
    "@lerna-lite/version": "^3.3.0",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "yarn lint:fix"
  },
  "packageManager": "yarn@4.1.0"
}
